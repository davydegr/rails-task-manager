<div class="container">
    <h1>Your tasks:</h1>
    <ul id="task-list">
      <% @tasks.each do |task| %>

          <li>
    <%# If a user clicks on the checkbox, %>
    <%# Send a post request to update_task_path %>
    <%# Update the task with the pre filled form but only change the completed status %>


                <%= form_for(task) do |f| %>
                  <%= f.check_box :completed, onClick: "{this.form.submit();}", class: "checkbox" %>
                <% end %>

                <%= link_to task.title, task_path(task), class: "task" %>

                <%= link_to " ❌ delete",
                    destroy_task_path(task.id),
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
                %>

          </li>

      <% end %>
    </ul>

    <%= link_to "Add a new task", new_task_path %>
</div>
