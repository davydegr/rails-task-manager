<h1><%= @task.title %></h1>
<p><%= @task.details %></p>


<%= form_for(@task) do |f| %>
    <%= f.check_box :completed, onClick: "{this.form.submit();}"%>
<% end %>

<%= link_to "Back to tasks", tasks_path %>
<%= link_to "Edit this task", edit_task_path %>
<%= link_to "Delete 🗑️",
    destroy_task_path,
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
